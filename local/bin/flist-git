#!/usr/bin/env bash

main() {
  local dir="${1:-.}"
  find_files "$dir" | squelch
}

find_files() {
  local dir="$1"
  if in_git_repo; then
    local exclude="--exclude-standard"
    if [[ -n "${flist_git_noexclude:-}" ]]; then
      exclude=""
    fi
    git ls-files --cached --others $exclude "$dir"
  else
    find "$dir" -type f
  fi
}

in_git_repo() {
  [ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1
}

main "$@"
